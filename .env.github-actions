# ============================================================================
# REQUIRED SECRETS (must be set in GitHub repository settings)
# ============================================================================

# PostgreSQL database password (strong password required for production)
# Used by: All services
POSTGRES_PASSWORD=your_secure_postgres_password_here

# API Keys (set one based on your LLM_PROVIDER choice)
# For OpenRouter/OpenAI (default):
OPENROUTER_API_KEY=your_openrouter_api_key_here

# For Claude/Anthropic:
# ANTHROPIC_API_KEY=your_anthropic_api_key_here

# GitHub Personal Access Token for HAARRRvest repository
# Required permissions: repo (for private) or public_repo (for public)
# Create at: https://github.com/settings/tokens
DATA_REPO_TOKEN=your_github_personal_access_token_here

# ============================================================================
# OPTIONAL CONFIGURATION (can override defaults)
# ============================================================================

# LLM Provider Selection
# Options: openai (default), claude
LLM_PROVIDER=openai

# HSDS Validation Settings
# Confidence thresholds for data validation and inference
HSDS_MIN_CONFIDENCE=0.82      # Minimum confidence score for acceptance (allows smart inference)
HSDS_RETRY_THRESHOLD=0.65     # Minimum confidence score to attempt retry
HSDS_MAX_RETRIES=5            # Maximum number of retry attempts

# LLM Model Configuration
LLM_MODEL_NAME=google/gemini-2.0-flash-001
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=64768
LLM_RESPONSE_FORMAT=json_object
LLM_TIMEOUT=30

# API Configuration (for OpenRouter)
API_BASE_URL=https://openrouter.ai/api/v1
API_VERSION=2024-02-01
HTTP_REFERER=https://github.com/openrouter-ai/openrouter-python

# Worker Configuration
WORKER_COUNT=1
WORKER_REPLICAS=1

# HAARRRvest Publisher Configuration
DATA_REPO_URL=https://github.com/For-The-Greater-Good/HAARRRvest.git
PUBLISHER_CHECK_INTERVAL=300
DAYS_TO_SYNC=7
PUBLISHER_PUSH_ENABLED=true  # Set to true for production
GIT_USER_EMAIL=github-actions[bot]@users.noreply.github.com
GIT_USER_NAME=GitHub Actions

# Database Initialization
DB_INIT_DAYS_TO_SYNC=90
SKIP_DB_INIT=false

# Content Store
CONTENT_STORE_PATH=/data-repo
CONTENT_STORE_ENABLED=true

# Logging
LOG_LEVEL=INFO
JSON_LOGS=true

# Application
APP_TITLE=Pantry Pirate Radio

# Geocoding Configuration
# Primary provider: arcgis (default, free tier) or nominatim
GEOCODING_PROVIDER=arcgis
# Cache geocoding results for 30 days to avoid duplicate API calls
GEOCODING_CACHE_TTL=2592000
# Rate limit in seconds between requests (0.5 = 2 req/sec for ArcGIS free tier)
GEOCODING_RATE_LIMIT=0.5

# ArcGIS Authentication (optional - provides higher limits)
# Create free developer account at https://developers.arcgis.com
# With API key: 1M geocodes/month, Without: 20K geocodes/month
# Get your API key from: https://developers.arcgis.com/api-keys/
ARCGIS_API_KEY=

# Nominatim Configuration (fallback geocoder)
NOMINATIM_USER_AGENT=pantry-pirate-radio
# Must respect 1 request per second limit
NOMINATIM_RATE_LIMIT=1.1

# Geocoding Fallback Behavior
GEOCODING_ENABLE_FALLBACK=true
GEOCODING_MAX_RETRIES=3
GEOCODING_TIMEOUT=10


